# =====================================================================
# SkillStack 2.0 Environment Configuration
# Copy this file to .env and fill in your actual values
# =====================================================================

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=skillstack
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ðŸ”¥ CRITICAL: Database URL for Alembic migrations
DATABASE_URL=postgresql+psycopg2://postgres:your_secure_password_here@postgres:5432/skillstack

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-secret-key-at-least-32-characters-long
JWT_SECRET_KEY=your-jwt-secret-key-at-least-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# AI Configuration (Gemini)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
AI_PROVIDER=gemini
AI_MAX_TOKENS=1024
AI_RATE_LIMIT_PER_MIN=10

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Application Settings
APP_ENV=development
DEBUG=True
USE_CELERY=true

# Optional: Email Configuration (if you add email features later)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password